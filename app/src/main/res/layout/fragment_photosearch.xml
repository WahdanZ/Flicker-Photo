<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="Search By Photo Tag and Enojy ;)"
        android:layout_height="match_parent" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"

        android:id="@+id/rv_photo"
        android:name="com.example.ahmedwahdan.flicker_photo.ui.search.PhotoSearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.ahmedwahdan.flicker_photo.ui.search.PhotoSearch.PhotoSearchFragmentImp"
        tools:listitem="@layout/photo_item"
        android:layout_alignParentTop="true"
        android:numColumns="auto_fit"
      />
    <ProgressBar
        android:id="@+id/search_photo_progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

</RelativeLayout>
